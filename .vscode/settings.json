{
	"editor.cursorSmoothCaretAnimation": "on",
	"explorer.fileNesting.enabled": true,
	"explorer.fileNesting.patterns": {
		"tsconfig.json": "tsconfig.*.json, env.d.ts",
		"vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*",
		"package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .prettier*, prettier*, .editorconfig"
	},
	"editor.codeActionsOnSave": {
		"source.fixAll": "explicit"
	},
	"editor.formatOnSave": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"[scss]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"i18n-ally.localesPaths": [
		"src/plugins/i18n",
		"src/plugins/crud/locales",
		"src/plugins/dev-tools/locales",
		"src/plugins/editor-preview/locales",
		"src/plugins/editor-wang/locales",
		"src/plugins/excel/locales",
		"src/plugins/theme/locales",
		"src/plugins/upload/locales",
		"packages/crud/src/locale",
		"src/plugins/view/locales",
		"packages/crud/types/locale",
		"src/modules/base/locales",
		"src/modules/demo/locales",
		"src/modules/helper/locales",
		"src/modules/dict/locales",
		"src/modules/recycle/locales",
		"src/modules/space/locales",
		"src/modules/task/locales",
		"src/modules/user/locales"
	]
}
